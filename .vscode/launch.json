{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--multiple",
                "10",
                "--hill"
            ],
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Python Debugger: Importance Sampling",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "--importance",
                "--trials",
                "1000",
                "--depth",
                "3",
                "--hill",
                "--policy-file",
                "src/best_hill_climbing_policy.pkl"
            ],
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}